<?xml version="1.0" encoding="utf-8"?>

<!--
	
	@description
	
	Route.xml offers a whitelist map of specific
	keywords or types of values that may
	exist within the request, and then
	defines what module/template PHP
	should load.
	
	This is the route for the current context. If 
	this file doesn't exist, the default route
	will be used.
	
-->

<base is="resource">
	
	<!-- Pass requested resource to view -->
	<next when="string">
		<var>resource</var>
		<next when="numeric">
			<var>id</var>
			<next when="string">
				<var>invalid</var>
			</next>
			<next when="numeric">
				<var>invalid</var>
			</next>
		</next>
		<next when="!numeric">
			<var>invalid</var>
		</next>
	</next>
	
	<var>context</var>
	<template>index</template>
	<module>index</module>
	<frame>shell</frame>
</base>
